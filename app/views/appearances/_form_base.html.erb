<%= form_for @appearance do |f| %>
    <%= f.label :guest_id, "Guest" %>
    <%= f.collection_select :guest_id, @guests, :id, :name %>
    <%= f.label :guest_id, "Episode #" %>
    <%= f.collection_select :episode_id, @episodes, :id, :number %><br>
    <%= f.label :ratings, "Rating #" %>
    <%= f.select :ratings, options_for_select(1..5) %><br>
    <%= f.submit %>
    <% end %>
