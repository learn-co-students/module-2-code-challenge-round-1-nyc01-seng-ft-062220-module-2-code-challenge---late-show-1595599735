<h1>New Appearance Form</h1>


<% if flash[:program_errors] %>
  <% flash[:program_errors].each do |error| %>
  <p><%= error %></p>
  <% end %>
<% end %>


<%= form_for @appearance do |f| %>
<%= f.label :Guest %>
<%= f.collection_select :guest_id, @guests, :id, :name %>

<%= f.label :Episode %>
<%= f.collection_select :episode_id, @episodes, :id, :number %>

<%= f.label :Rating %>
<%= f.number_field :rating %>
<%# also thought about add , min: 1, max:5, so the user cannot enter a value less than 1, or greater than 5 %>

<%= f.submit %>
<% end %>
