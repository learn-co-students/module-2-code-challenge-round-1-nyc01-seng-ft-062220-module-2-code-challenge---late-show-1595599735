<h1>Form for Appearances</h1>
<% if flash[:user_error] %>
    <div id="error_explanation">
        <h2>
            <%= pluralize(flash[:user_error].count, "error") %>
        prohibited this appearance from being saved:
        </h2>

        <ul>
        <%= flash[:user_error].each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
<% end %>

<%= form_for @appearance do |f| %>
    <label>Rating:</label>
    <%= f.text_field :rating %><br><br>

    <label>Guest:</label>
    <%= f.collection_select :guest_id, @guests, :id, :name %><br><br>

    <label>Episodes:</label>
    <%= f.collection_select :episode_id, @episodes, :id, :number %><br><br>

    <%= f.submit "Submit Appearance" %>

<% end %>
