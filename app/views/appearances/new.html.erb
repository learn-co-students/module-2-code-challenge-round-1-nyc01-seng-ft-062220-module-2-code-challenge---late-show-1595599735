<h1>New Appearance Form</h1>
<%if flash[:errors]%>
    <%flash[:errors].each do |error_type, error_message|%>
        <p>Error: <%="#{error_type} #{error_message[0]}"%></p>
    <%end%>
<%end%>
<%=form_for @appearance do |f|%>
    <%=f.label 'Guest: '%>
    <%=f.collection_select :guest_id, @guests, :id, :name%>
    <%=f.label 'Episode: '%>
    <%=f.collection_select :episode_id, @episodes, :id, :date%>
    <%=f.label 'Rating: '%>
    <%=f.number_field :rating%>
    <%=f.submit%>
<%end%>