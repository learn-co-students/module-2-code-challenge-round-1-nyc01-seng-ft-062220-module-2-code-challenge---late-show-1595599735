<h1> Create a New Appearance </h1>

<% if flash[:error_messages] %>
    <% flash[:error_messages].each do |message| %>
        <h2><%= message %></h2><br>
    <% end%>
<% end%>


<%= form_for @appearance do |f| %>

  Guest: <%= f.collection_select :guest_id, Guest.all, :id, :name %>
  Episode ID: <%= f.collection_select :episode_id, Episode.all, :id, :id %>
  <%=f.label :rating %>:
  <%= f.number_field :rating %>
  <%= f.submit %>
<% end %>