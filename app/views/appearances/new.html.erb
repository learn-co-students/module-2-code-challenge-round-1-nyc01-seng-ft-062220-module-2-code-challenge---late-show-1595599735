<h1> New Appearance </h1>

<% if flash[:appearance] %>
 <% flash[:appearance.errors.full_messages].each do |error| %>
    <%= error %>
    <% end %> 

<%= form_for(@appearance) do |f| %>
    
    <div classs="field">
      <%= f.label :guest_id %>
      <%= f.collection_select :guest_id, Guest.all, :id, :name%>
    </div>

    <%= f.label :episode_id %>
      <%= f.collection_select :episode_id, Episode.all, :id, :number %>

      <%= f.label :rating %>
      <%= f.number_field :rating %>

    <div class="actions">
      <%= f.submit "Submit" %>

    </div>
  <% end %>