<h1> Specific Episode </h1>

<p>Episode date:<%= @episode.date %></p>
<h2>Guests:</h2>
<% @episode.guests.each do |guest| %>
    <p><%= link_to guest.name, guest_path(guest) %></p>
<% end %>

<h2>Average Rating:</h2>

<% total = 0 %>
<% @episode.appearances.each do |appearance| %>
    <% total += appearance.rating %>
<% end %> 

<%= total/@episode.appearances.length %>